{
  "name": "robot-admin",
  "version": "0.0.1",
  "private": true,
  "description": "Robot 中后台管理系统团队架构模板 - 基于 Vue3 + Vite 的企业级中后台解决方案",
  "author": {
    "name": "ChenY",
    "email": "ycyplus@gmail.com",
    "url": "https://github.com/ChenyCHENYU"
  },
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "bun run type-build && bun run build-prod",
    "build-prod": "vite build --mode production",
    "build:test": "vite build --mode test --emptyOutDir",
    "build:staging": "vite build --mode staging --profile",
    "preview": "bun run build-prod && vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit --watch",
    "type-build": "vue-tsc --build tsconfig.app.json --force",
    "lint:oxlint": "oxlint . --fix -D correctness --ignore-path .gitignore",
    "lint:eslint": "eslint . --fix",
    "lint": "bun x oxlint . --fix && bun x eslint . --fix",
    "format": "prettier --write src/",
    "prepare": "husky install",
    "commit": "bunx cz",
    "check-branch": "bash -c 'if [ -z \"$1\" ]; then echo \"请指定目标分支，用法: npm run check-branch -- 分支名\"; exit 1; fi; git diff --stat HEAD...$1 && git diff --quiet HEAD...$1 && echo \"✅ 代码完全一致\" || echo \"⚠️  存在差异\"; echo -e \"\\n[提交差异检查]\\n\"; git log --left-right --graph --oneline HEAD...$1' --"
  },
  "dependencies": {
    "@commitlint/cli": "12.1.4",
    "@commitlint/config-conventional": "12.1.4",
    "@iconify-json/ri": "^1.2.5",
    "@splinetool/runtime": "^1.9.92",
    "@vueuse/core": "^13.1.0",
    "axios": "^1.9.0",
    "echarts": "^5.6.0",
    "husky": "7.0.1",
    "motion-v": "^1.1.0-alpha.1",
    "nprogress": "^0.2.0",
    "pinia": "^3.0.1",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0",
    "wangeditor": "^4.7.15"
  },
  "devDependencies": {
    "@iconify-json/ic": "^1.2.2",
    "@iconify-json/mdi": "^1.2.3",
    "@inspira-ui/plugins": "^0.0.1",
    "@tsconfig/node22": "^22.0.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.13.9",
    "@types/nprogress": "^0.2.3",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitejs/plugin-vue-jsx": "^4.1.1",
    "@vitest/eslint-plugin": "^1.1.36",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/runtime-core": "^3.5.13",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "commitizen": "4.2.4",
    "cz-customizable": "6.3.0",
    "eslint": "^9.21.0",
    "eslint-plugin-jsdoc": "^50.6.11",
    "eslint-plugin-oxlint": "^0.15.13",
    "eslint-plugin-vue": "~10.0.0",
    "jiti": "^2.4.2",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.5.0",
    "naive-ui": "^2.41.0",
    "npm-run-all2": "^7.0.2",
    "oxlint": "^0.15.13",
    "prettier": "3.5.3",
    "sass": "^1.87.0",
    "typescript": "~5.8.0",
    "unocss": "66.0.0",
    "unplugin-auto-import": "^19.1.2",
    "unplugin-icons": "^22.1.0",
    "unplugin-vue-components": "^28.5.0",
    "vite": "^6.2.1",
    "vite-console-plugin": "^1.0.0",
    "vite-plugin-vue-devtools": "^7.7.2",
    "vitest": "^3.0.8",
    "vue-tsc": "^2.2.8"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,vue}": [
      "eslint --fix --no-cache",
      "prettier --write"
    ]
  }
}
